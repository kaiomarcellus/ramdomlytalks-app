<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/viewChatFromUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/shape_message_from"
        android:minWidth="100dp"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:visibility="gone">

        <br.com.kmdev.ui.components.TextViewComponent
            android:id="@+id/tvMessageFromUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:textViewFontMedium="true"
            tools:ignore="SmallSp"
            tools:text="Jhon says:" />

        <br.com.kmdev.ui.components.TextViewComponent
            android:id="@+id/tvMessageFromUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textViewFontBold="true"
            tools:text="Item label" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewChatFromMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="120dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_message_to"
        android:minWidth="100dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:visibility="gone">

        <br.com.kmdev.ui.components.TextViewComponent
            android:id="@+id/tvMessageToUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="2dp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textViewFontBold="true"
            tools:text="Item label" />

    </LinearLayout>
</LinearLayout>